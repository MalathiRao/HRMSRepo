
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HRMS.Web</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/app.css" rel="stylesheet" />
</head>
<body>
    <!-- Pre loader -->
    <div id="loader" class="loader">
        <div class="plane-container">
            <div class="preloader-wrapper small active">
                <div class="spinner-layer spinner-blue">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="gap-patch">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
                <div class="spinner-layer spinner-red">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="gap-patch">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
                <div class="spinner-layer spinner-yellow">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="gap-patch">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
                <div class="spinner-layer spinner-green">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="gap-patch">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!--Sidebar Start-->
    <aside class="main-sidebar fixed offcanvas shadow">
        <section class="sidebar">
            <div class="mt-3 mb-3 ml-3" style="width:145px !important"><img src="~/img/basic/NStarx_Logo.png" alt=""></div>
            <div class="relative">
                <a data-toggle="collapse" href="#userSettingsCollapse" role="button" aria-expanded="false" aria-controls="userSettingsCollapse" class="btn-fab btn-fab-sm fab-right fab-top btn-primary shadow1 "><i class="icon icon-cogs"></i></a>
                <div class="user-panel p-3 light mb-2">
                    <div>
                        <div class="float-left image"><img class="user_avatar" src="~/img/dummy/u2.png" alt="User Image"></div>
                        <div class="float-left info">
                            <h6 class="font-weight-light mt-2 mb-1">@TempData["Email"]</h6>
                            <a href="#"><i class="icon-circle text-primary blink"></i>Online</a>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="collapse" id="userSettingsCollapse">
                        <div class="list-group mt-3 shadow">
                            <a href="/ProfileSettings/Index/"@TempData["Email"] class="list-group-item list-group-item-action ">
                                    <i class="mr-2 icon-umbrella text-blue"></i>Profile
                                </a>
                                @*<a  asp-controller="ProfileSettings" asp-action="Index" asp-route-emailId="@TempData["Email"]" class="btn btn-outline-primary">Profile</a>*@
                            @*<a href="#" class="list-group-item list-group-item-action">
                                <i class="mr-2 icon-cogs text-yellow"></i>Settings
                            </a>*@
                            <a asp-controller="Account" asp-action="Logout" class="list-group-item list-group-item-action"><i class="mr-2 icon-power-off text-red"></i>Logout</a>
                        </div>
                    </div>
                </div>
            </div>
            <ul class="sidebar-menu">
                <li class="treeview">
                    <a href="index.html"><i class="icon icon-sailing-boat-water purple-text s-18"></i><span>Dashboard</span></a>
                </li>

                <li class="treeview">
                    <a href="#"><i class="icon icon-account_box light-green-text s-18"></i>Employees<i class="icon icon-angle-left s-18 pull-right"></i></a>
                    <ul class="treeview-menu">
                        <li><a href="home"><i class="icon icon-circle-o"></i>All Employees</a></li>
                        <li><a href="#"><i class="icon icon-add"></i>Add Employee</a></li>
                        <li><a href="#"><i class="icon icon-user"></i>Edit Employees</a></li>
                    </ul>
                </li>
                <li class="treeview">
                    <a href="#"><i class="icon icon-goals-1 amber-text s-18"></i><span>Departments</span><i class="icon icon-angle-left s-18 pull-right"></i></a>
                    <ul class="treeview-menu">
                        <li><a href="#"><i class="icon icon-circle-o"></i>All Departments</a></li>
                        <li><a href="#"><i class="icon icon-add"></i>Add Departments</a></li>
                        <li><a href="#"><i class="icon icon-user"></i>Edit Departments</a></li>
                    </ul>
                </li>
                <li class="treeview">
                    <a href="#"><i class="icon icon-trophy2 blue-text s-18"></i><span>Designations</span></a>
                </li>
                <li class="treeview ">
                    <a href="/Client/Index"><i class="icon icon-people_outline text-green s-18"></i><span>Clients</span></i></a>
                </li>
                <li class="treeview ">
                    <a href="#"><i class="icon icon-documents3 text-blue s-18"></i><span>Projects</span></a>
                </li>
                <li class="treeview ">
                    <a href="#"><i class="icon icon-date_range text-green s-18"></i><span>Holidays</span></a>
                </li>
                <li class="treeview ">
                    <a href="#"><i class="icon icon-plane text-blue s-18"></i><span>Leave Applications</span></a>
                </li>
            </ul>
        </section>
    </aside>
    <!--Sidebar End-->
    <div class="has-sidebar-left">
        <div class="pos-f-t">
            <div class="collapse" id="navbarToggleExternalContent">
                <div class="bg-dark pt-2 pb-2 pl-4 pr-2">
                    <div class="search-bar"><input class="transparent s-24 text-white b-0 font-weight-lighter w-128 height-50" type="text" placeholder="start typing..."></div>
                    <a href="#" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation" class="paper-nav-toggle paper-nav-white active "><i></i></a>
                </div>
            </div>
        </div>
        <div class="sticky">
            <div class="navbar navbar-expand navbar-dark d-flex justify-content-between bd-navbar blue accent-3">
                <div class="relative"><a href="#" data-toggle="offcanvas" class="paper-nav-toggle pp-nav-toggle"><i></i></a></div>
                <!--Top Menu Start -->
                <div class="navbar-custom-menu p-t-10">
                    <ul class="nav navbar-nav">
                        <!-- User Account-->
                        <li class="dropdown custom-dropdown user user-menu">
                            <a href="#" class="nav-link" data-toggle="dropdown"><img src="~/img/dummy/u8.png" class="user-image" alt="User Image" /></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!--Main Container Start-->

    <div id="app" class="page has-sidebar-left height-full">
        @if (Convert.ToString(ViewData["PageHeader"]) != "User Profile")
        {
            <header class="blue accent-3 relative">
                <div class="container-fluid text-white">
                    <div class="row p-t-b-10 ">
                        <div class="col">
                            <h4><i class="icon-package"></i> @ViewData["PageHeader"]</h4>
                        </div>
                    </div>
                </div>
            </header>
        }
        else
        {
            <header class="blue accent-3 relative">
                <div class="container-fluid text-white">
                    <div class="row p-t-b-10 ">
                        <div class="col">
                            <div class="pb-3">
                                <div class="image mr-3  float-left">
                                    <img class="user_avatar no-b no-p" src="~/img/dummy/u6.png" alt="User Image">
                                </div>
                                <div>
                                    <h6 class="p-t-10">Ramakrishna</h6>                                Ramakrishna.redddi@nstarxinc.com
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <ul class="nav nav-material nav-material-white responsive-tab" id="v-pills-tab" role="tablist">
                            <li><a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#"><i class="icon icon-account_box light-green-text s-18"></i>Employees</a></li>
                            <li><a class="nav-link" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" role="tab" aria-controls="v-pills-settings" aria-selected="false"><i class="icon icon-cog"></i>Contacts</a></li>
                        </ul>
                    </div>
                </div>
            </header>
        }
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <!--Main Container End-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/app.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
